@if (IsVisible && _selected != null)
{
    <div class="char-sheet-overlay">
        <div class="char-window">
             <!-- Header -->
             <div class="window-header">
                 <span>CHARACTER SHEET</span>
                 <button class="close-btn" @onclick="Toggle">X</button>
             </div>
             
             <div class="window-body">
                 <!-- Party Sidebar -->
